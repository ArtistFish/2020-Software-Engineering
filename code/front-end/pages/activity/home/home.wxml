<scroll-view scroll-y class="scrollPage">
  <view class="flex flex-direction bg-blue text-center">
    <view class="margin-top"></view>
    <view class="margin-top"></view>
    社团管理平台
    <view class="cu-bar search margin-top">
      <view class="search-form round">
        <text class="cuIcon-search"></text>
        <input type="text" placeholder="输入活动的关键词" confirm-type="search"></input>
      </view>
      <view class="action">
        <button class="cu-btn bg-blue light round" bindtap="tapSearch">搜索</button>
      </view>
    </view>
  </view>
  <view class="wraper shadow">
    <view class="flex flex-direction bg-white margin-top">
      <view class="text-center margin-top"> 活动推荐</view>
      <view class="flex cu-list grid col-{{gridCol}} no-border">
        <view class="cu-item justify-center align-center" wx:for="{{recommendList}}" wx:if="{{index<gridCol*3}}">
          <view class="cu-avatar radius lg" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10001.jpg);" data-index="{{index}}" bind:tap="tapRecommend"></view>
          <text class="text-cut my-recommend-name">{{item.activity_name}}</text>
        </view>
      </view>
    </view>
  </view>
  <loading wx:if="{{!loaded}}"></loading>
  <scroll-view wx:else scroll-x class="bg-white nav margin-top">
    <view class="flex text-center">
      <view class="cu-item flex-sub {{tabCur=='all'?'text-orange cur':''}}" bind:tap="tabSelect" data-list='all'>
        全部活动
      </view>
      <view class="cu-item flex-sub {{tabCur=='recent'?'text-orange cur':''}}" bind:tap="tabSelect" data-list='recent'>
        最近浏览
      </view>
    </view>
  </scroll-view>
  <view class="cu-list margin-top-xs">
    <view class="s-list" >
      <view class="s-item" wx:for="{{tabCur == 'all'? activityList:recent_list}}" wx:key="key" bindtap="tapActivity" data-index="{{index}}">
        <image src="https://ossweb-img.qq.com/images/lol/web201310/skin/big99008.jpg" class="si-img"></image>
        <view class="si-title">{{item.activity_name}}</view>
        <view class="si-data">开始时间:{{item.activity_start_time}}</view>
        <view class="si-data">报名截止:{{item.activity_sign_up_ddl}}</view>
        <view class="si-other">
          <view class="sio-price">¥{{item.activity_fee}}</view>
          <view class="sio-btn bg-yellow" catchtap="tapSignup" data-index="{{index}}">立即报名</view>
        </view>
      </view>
    </view>
  </view>
  <view class="cu-tabbar-height"></view>
</scroll-view>

